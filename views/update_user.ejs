  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->

         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css">
         <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.js"></script>
         <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"></script>
         

 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="first_name" class="text-light">First Name</label>
            <input type="text" name="id" value="<%= user._id %>">
            <!-- <input type="text" name="first_name" value="<%= user._id %>" placeholder="John"> -->
        </div>
        <div class="form-group">
            <label for="last_name" class="text-light">Last Name</label>
            <input type="text" name="last_name" value="" >
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email Id</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Mobile No</label>
            <input type="tel" name="mobile" id="mobile" class="intl-tel-input" placeholder="Enter your mobile number">
        </div>
        
        <div class="form-group">
            <label for="address1" class="text-light">Address 1</label>
            <input type="text" name="address1" value="" >
        </div>
        <div class="form-group">
            <label for="address2" class="text-light">Address 2</label>
            <input type="text" name="address2" value="" >
        </div>
        <div class="form-group">
            <label for="state" class="text-light">State</label>
            <select name="state">
                <option value="Select">Select</option>
                <option value="Bihar">Bihar</option>
                <option value="Odisha">Odisha</option>
                <option value="Gujrat">Gujrat</option>
                <option value="Maharastra">Maharastra</option>
                <option value="Goa">Goa</option>
                <option value="Punjab">Punjab</option>
                <option value="California">California</option>
                <option value="New York">New York</option>
                <option value="Texas">Texas</option>
                <!-- Add more states as needed -->
            </select>
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <select name="city">
                <option value="Select">Select</option>
                <option value="Patna">Patna</option>
                <option value="Badodra">Badodra</option>
                <option value="Bangalore">Bangalore</option>
                <option value="Jalandar">Jalandar</option>
                <option value="Los Angeles">Los Angeles</option>
                <!-- Add more countries as needed -->
            </select>
        </div>
        <div class="form-group">
            <label for="country" class="text-light">Country</label>
            <select name="country">
                <option value="Select">Select</option>
                <option value="USA">USA</option>
                <option value="Canada">Canada</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="United Kingdom">India</option>
                <option value="United Kingdom">Pakistan</option>
                <!-- Add more countries as needed -->
            </select>
        </div>
        <div class="form-group">
            <label for="zip_code" class="text-light">Zip Code</label>
            <input type="text" name="zip_code" value="" >
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>

<script>
    // Initialize the plugin on the mobile input field
    var input = document.querySelector("#mobile");
    var iti = window.intlTelInput(input, {
        initialCountry: "auto",
        separateDialCode: true,
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
    });

    // Listen for the change event and update the hidden input field with the selected country code
    input.addEventListener("countrychange", function() {
        var countryData = iti.getSelectedCountryData();
        document.querySelector("#country-code").value = "+" + countryData.dialCode;
    });
</script>
       
